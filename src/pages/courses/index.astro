---
import Shape from "@/components/Shape.astro";
import Base from "@/layouts/Base.astro";
import courseInfo from "@/data/course-info.json";
import Cta from "@/partials/Cta.astro";
---

<Base title={"courses"}>
  <Shape />
  <section class="page-hero pb-14 pt-16 relative bg-gradient-to-br from-white via-pink-50 to-yellow-50">
    <h2 class="text-center mb-6">Exploration Paths</h2>
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-[auto_1fr] gap-8 items-center">
            <!-- Left Side: Categories -->
            <div class="min-w-0">
                <div id="categoryButtons" class="space-y-3 md:space-y-4">
                     <!-- Data Structures & Algorithms (Default Selected) -->
                     <button data-category="dsa" class="category-btn w-full flex items-center bg-purple-50 rounded-lg p-3 text-left hover:bg-purple-100 transition relative">
                      <span class="absolute top-[-12px] right-[-12px] bg-green-500 text-white text-xs font-semibold px-2 py-1 rounded-full">Priority</span>
                      <span class="mr-4 text-purple-600">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                          </svg>
                      </span>
                      <span class="font-medium text-gray-800">Data Structures & Algorithms</span>
                  </button>

                  <!-- Development -->
                  <button data-category="web-development" class="category-btn w-full flex items-center bg-orange-50 rounded-lg p-3 text-left hover:bg-orange-100 transition relative">
                      <span class="absolute top-[-12px] right-[-12px] bg-green-500 text-white text-xs font-semibold px-2 py-1 rounded-full">Priority</span>
                      <span class="mr-4 text-orange-500">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                          </svg>
                      </span>
                      <span class="font-medium text-gray-700">Development</span>
                  </button>

                    <button data-category="advanced-web-development" class="category-btn w-full flex items-center bg-red-50 rounded-lg p-3 text-left hover:bg-red-100 transition">
                        <span class="mr-4 text-red-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                            </svg>
                        </span>
                        <span class="font-medium text-gray-700">Advanced Development</span>
                    </button>
                    
                    <button data-category="cs" class="category-btn w-full flex items-center bg-green-50 rounded-lg p-3 text-left hover:bg-green-100 transition">
                        <span class="mr-4 text-green-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </span>
                        <span class="font-medium text-gray-700">Core Computer Science</span>
                    </button>
                    
                    <button data-category="system-design" class="category-btn w-full flex items-center bg-red-50 rounded-lg p-3 text-left hover:bg-red-100 transition">
                        <span class="mr-4 text-red-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
                            </svg>
                        </span>
                        <span class="font-medium text-gray-700">System Design</span>
                    </button>

                    <button data-category="uiux" class="category-btn w-full flex items-center bg-blue-50 rounded-lg p-3 text-left hover:bg-blue-100 transition">
                        <span class="mr-4 text-blue-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </span>
                        <span class="font-medium text-gray-700">UI/UX & Product</span>
                    </button>
                </div>
            </div>
            
            <!-- Right Side: Dynamic Image/Content -->
            <div id="roadmapContent" class="w-full">
              <div class="rounded-xl flex items-center justify-center">
                <img src="/images/categories/1.png" alt="DSA Roadmap" class="max-w-full max-h-[400px] object-contain">
              </div>
          </div>
        </div>
    </div>
</section>
  
  
  

  <section class="section py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12 text-zinc-950">
        Article Series
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {Object.entries(courseInfo).map(([slug, course]) => (
          <a 
            href={`/courses/${slug}`} 
            class="group relative bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100"
          >
            {course.ongoing=="true" && <p class="py-1 bg-slate-200 text-zinc-900 text-center">Ongoing</p>  }
            <div class="p-4">
              <img 
                src={course.image || "/images/collaboration.png"} 
                alt={course.title} 
                class="w-full h-48 object-cover rounded-lg mb-4 transform group-hover:scale-105 transition-transform duration-300"
              />
              
              <div class="space-x-2">
                <span class="inline-block bg-gradient-to-r from-[#fddc43] to-yellow-200 text-black text-xs font-semibold py-1 px-3 rounded-full mb-4">
                  {course.category}
                </span>
                <span class="inline-block bg-gradient-to-r from-[#fa729a] to-pink-400 text-white text-xs font-semibold py-1 px-3 rounded-full mb-4">
                  {course.time}
                </span>
              </div>
              
              <h2 class="text-xl font-semibold text-gray-800 group-hover:text-[#fa729a] transition-colors duration-300">
                {course.title}
              </h2>
              <p class="text-gray-600 mt-2 mb-4">{course.subtitle}</p>
            </div>
            
            <div class="absolute inset-0 bg-gradient-to-br from-[#fa729a] to-[#fddc43] opacity-0 group-hover:opacity-10 transition-opacity duration-300 rounded-xl"></div>
          </a>
        ))}
      </div>
    </div>
  </section>
  <Cta />
</Base>

<script is:inline>

function initCategoryButtons() {
  const categoryButtons = document.getElementById("categoryButtons");
  const roadmapContent = document.getElementById("roadmapContent");

  if (!categoryButtons || !roadmapContent) return;

  const roadmapImages = {
    "web-development": "/images/categories/1.png",
    "advanced-web-development": "/images/categories/2.png",
    "uiux": "/images/categories/3.png",
    "cs": "/images/categories/4.png",
    "dsa": "/images/categories/5.png",
    "system-design": "/images/categories/6.png",
  };

  categoryButtons.addEventListener("click", (event) => {
    const button = event.target.closest(".category-btn");
    if (!button) return;

    // Remove active state from all buttons
    document.querySelectorAll(".category-btn").forEach((btn) => {
      btn.classList.remove("border-2", "border-blue-500");
    });

    // Add active state to clicked button
    button.classList.add("border-2", "border-blue-500");

    const category = button.dataset.category;
    const imagePath = roadmapImages[category];

    roadmapContent.innerHTML = `
      <div class="rounded-xl flex items-center justify-center">
        <img src="${imagePath}" alt="${category} Roadmap" class="max-w-full max-h-[400px] object-contain">
      </div>
    `;
  });
}

document.addEventListener("astro:page-load", initCategoryButtons); // Ensures handlers work on first load
  document.addEventListener("astro:after-swap", initCategoryButtons); // Handles dynamic navigation
  window.addEventListener("load", initCategoryButtons); // Ensures handlers attach even if Astro fails

</script>