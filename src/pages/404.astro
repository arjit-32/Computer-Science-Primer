---
import Base from "@/layouts/Base.astro";
---

<Base title={"404"}>
  <section class="py-4 bg-gradient-to-br from-white via-pink-50 to-yellow-50 min-h-screen flex items-center">
    <div class="container">
      <div class="flex flex-col items-center justify-center text-center px-4">
        <!-- Text-based 404 Display -->
        <div class="mb-8">
          <div class="text-display text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-300 to-yellow-300 mb-2">
            404
          </div>
          <div class="text-2xl font-mono text-gray-600 mt-2">
            ¯\_(ツ)_/¯
          </div>
        </div>
        
        <h2 class="text-3xl font-semibold mb-4">Page Not Found</h2>
        
        <p class="text-xl text-gray-600 mb-8">Guess you expected perfection from a one-man show... well, here’s a little glitch for ya!</p>
        
        <div class="space-y-6 max-w-md">
         
          
          <a href="/" class="inline-block px-8 py-3 bg-slate-50 text-black border-gray-500 border-2">
            Take Me Home
          </a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .text-display {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      line-height: 1;
      letter-spacing: -0.05em;
      text-shadow: 2px 2px 20px rgba(0,0,0,0.1);
    }
    
    @keyframes float {
      0% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
      100% {
        transform: translateY(0px);
      }
    }
    
    .container {
      max-width: 900px;
      margin: 0 auto;
    }
  </style>
</Base>