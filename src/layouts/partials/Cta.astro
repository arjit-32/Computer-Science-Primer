---
import config from "@/config/config.json";

const {
  call_to_action: {
    title,
    description,
    button: { label1, link1, label2, link2 },
  },
} = config;
---

<section class="px-5 py-8 xl:py-[80px]">
  <div class="container">
    <div
      class="rounded-t-[20px] rounded-b-[80px] bg-gradient-to-r from-pink-500 via-orange-400 to-yellow-300 px-6 py-14 shadow-lg"
    >
      <div class="max-w-5xl mx-auto flex flex-col-reverse lg:flex-row items-center justify-between gap-8">
        
        <!-- Text Section -->
        <div class="text-center lg:text-left">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">{title}</h2>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a class="btn btn-white" href={link1}>{label1}</a>
            <a class="btn btn-white" href={link2}>{label2}</a>
          </div>
        </div>

        <!-- Description -->
        <div class="text-white/90 text-base leading-relaxed text-center lg:text-left max-w-md">
          {description}
        </div>

      </div>
    </div>
  </div>
</section>
